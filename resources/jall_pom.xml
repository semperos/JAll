<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>Hello</artifactId>
    <version>0.1</version>
    <packaging>jar</packaging>

    <name>Hello World for JAll</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <javaSupportDir>${project.build.directory}/src/support/java</javaSupportDir>
        <!-- clojure-maven-plugin expects relative path for sources -->
        <clojureSourceDir>target/src/main/clojure</clojureSourceDir>
        <rubySourceDir>target/src/main/ruby</rubySourceDir>
        <javaSourceDir>${project.build.directory}/src/main/java</javaSourceDir>
        <javaSupportPhase>generate-sources</javaSupportPhase>
        <clojureCompilePhase>process-sources</clojureCompilePhase>
        <rubyCompilePhase>process-sources</rubyCompilePhase>
        <javaCompilePhase>compile</javaCompilePhase>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>compile-java-support-files</id>
                        <phase>${javaSupportPhase}</phase>
                        <configuration>
                            <tasks>
                                <mkdir dir="${project.build.outputDirectory}"/>
                                <javac srcdir="${javaSupportDir}" destdir="${project.build.outputDirectory}"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <!-- Because it's easier this way -->
                    <execution>
                      <id>compile-ruby-files</id>
                      <phase>${rubyCompilePhase}</phase>
                      <configuration>
                        <tasks>
                          <mkdir dir="${project.build.outputDirectory}"/>
                          <exec executable="jrubyc">
                            <arg value="--target"/>
                            <arg value="target/classes"/>
                            <arg value="--javac"/>
                            <arg value="target/src/main/ruby"/>
                            <arg value="--verbose"/>
                          </exec>
                        </tasks>
                      </configuration>
                      <goals>
                          <goal>run</goal>
                      </goals>
                    </execution>
                    <!-- <execution> -->
                    <!--     <id>compile-renewed-java-files</id> -->
                    <!--     <phase>${javaCompilePhase}</phase> -->
                    <!--     <configuration> -->
                    <!--         <tasks> -->
                    <!--             <mkdir dir="${project.build.outputDirectory}"/> -->
                    <!--             <javac srcdir="${javaSourceDir}" destdir="${project.build.outputDirectory}"/> -->
                    <!--         </tasks> -->
                    <!--     </configuration> -->
                    <!--     <goals> -->
                    <!--         <goal>run</goal> -->
                    <!--     </goals> -->
                    <!-- </execution> -->
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${javaSourceDir}</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.theoryinpractise</groupId>
                <artifactId>clojure-maven-plugin</artifactId>
                <version>1.3.10</version>
                <extensions>true</extensions>
                <configuration>
                    <sourceDirectories>
                        <sourceDirectory>${clojureSourceDir}</sourceDirectory>
                    </sourceDirectories>
                </configuration>
                <executions>
                    <execution>
                        <id>clojure-compile</id>
                        <phase>${clojureCompilePhase}</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <phase>test</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                        <configuration>
                            <mainClass>com.example.Hello</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.clojure</groupId>
            <artifactId>clojure</artifactId>
            <version>1.4.0</version>
        </dependency>
        <dependency>
            <groupId>org.jruby</groupId>
            <artifactId>jruby-complete</artifactId>
            <version>1.6.7</version>
        </dependency>
    </dependencies>
</project>
